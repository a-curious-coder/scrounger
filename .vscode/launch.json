{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with venv",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["https://futurlab.co.uk"],
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        }
    ]
}